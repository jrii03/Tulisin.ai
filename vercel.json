{
  "version": 2,
  "builds": [
    { "src": "api/*.js", "use": "@vercel/node" },
    { "src": "public/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/home", "dest": "/public/index.html" },
    { "src": "/form", "dest": "/public/form.html" },
    { "src": "/", "dest": "/public/home.html" }  // optional: default landing
  ]
}
